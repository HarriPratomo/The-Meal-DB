<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pesons_user"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:civ_border_color="#838181"
        android:src="@drawable/meals_db"
        app:civ_border_width="3dp"/>
    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pesons_user">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="name"
            android:textColor="@color/textColor"
            android:fontFamily="@font/gilroy_regular"
            android:textSize="17dp" />
        <LinearLayout
            android:id="@+id/line1"
            android:layout_marginTop="15sp"
            android:layout_below="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_email_black_24dp"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/gilroy_regular"
                android:text="email"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_marginTop="15sp"
            android:layout_below="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/id"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/userId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:fontFamily="@font/gilroy_regular"
                android:text="email"
                android:textSize="15sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/textDesc"
            android:textColor="@color/textColor"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:fontFamily="@font/gilroy_regular"
            android:textStyle="bold"
            android:text="Description Apps"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDesc"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gilroy_regular"
            android:textStyle="bold"
            android:text="@string/desc_apps"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_marginTop="50dp"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:text="Log Out"
            android:background="@drawable/bg_btn"
            android:fontFamily="@font/gilroy_regular"
            android:textStyle="bold"
            android:id="@+id/logoutBtn"/>


    </RelativeLayout>
</RelativeLayout>