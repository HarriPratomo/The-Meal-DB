<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/detailMenu"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backArrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#464647"
        android:src="@drawable/back"
        app:rippleColor="@color/backgrounds" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/favorites"
        android:backgroundTint="#FFC107"
        android:src="@drawable/unfav"/>
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        app:duration="800">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/shimmer_bg_detail" />

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relativeDetail"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageDetailMenu"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/no_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_below="@+id/imageDetailMenu"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/textColor"
                    android:id="@+id/nameMenudetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sate Padang"
                    android:fontFamily="@font/gilroy_regular"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tag"/>
                    <TextView
                        android:id="@+id/detailTagMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Categories"
                        android:fontFamily="@font/gilroy_regular"
                        android:textSize="13sp"
                        android:textColor="@color/textColor"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/location"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Indonesian"
                        android:id="@+id/locationDetail"
                        android:fontFamily="@font/gilroy_regular"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/whatshot"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Chicken"
                        android:id="@+id/categoriesDetail"
                        android:fontFamily="@font/gilroy_regular"
                        android:textStyle="bold"/>
                </LinearLayout>
                <TextView
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/gilroy_regular"
                    android:text="Ingredient"
                    android:layout_marginTop="20dp"
                    android:id="@+id/ingDetail"/>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/str1"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/str2"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/str3"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/str4"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/str5"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/str6"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/str7"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/str8"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/str9"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/str10"
                            android:fontFamily="@font/gilroy_regular"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/msr1"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/msr2"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="msr1"
                            android:id="@+id/msr3"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/msr4"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/msr5"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/msr6"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/msr7"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/msr8"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/msr9"
                            android:fontFamily="@font/gilroy_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="str1"
                            android:id="@+id/msr10"
                            android:fontFamily="@font/gilroy_regular"/>

                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Instructions"
                    android:fontFamily="@font/gilroy_regular"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_regular"
                    android:layout_marginTop="10dp"
                    android:text="@string/desc"
                    android:maxLines="4"
                    android:id="@+id/descMenudetail"/>
                <TextView
                    android:id="@+id/txtMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_regular"
                    android:text="more ......"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/orange"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:id="@+id/cardVideo"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="8dp"
                    android:elevation="1dp"
                    app:cardUseCompatPadding="true">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/no_image"
                        android:id="@+id/imageVideos"/>
                    <ImageButton
                        android:background="@color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/playbutton"
                        android:layout_gravity="center"
                        android:id="@+id/play"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>